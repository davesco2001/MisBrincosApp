<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".EditPackagesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_edit_packages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:collapseIcon="@drawable/icon_vector_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/ic_edit_black_24dp"
        app:navigationIcon="@drawable/icon_vector_2"
        app:title="@string/edit_package"
        app:titleTextColor="@color/colorRebeccaPurple" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/edit_package"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_edit_packages"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorRebeccaPurple"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/edit"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.91" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView6"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.014" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/select_package_id"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView6"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView6"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="@+id/recyclerView6"
        app:layout_constraintTop_toTopOf="@+id/recyclerView6"
        app:layout_constraintVertical_bias="0.212" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:autofillHints="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView6"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView6"
        app:layout_constraintStart_toStartOf="@+id/recyclerView6"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView7"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView6"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/package_name"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView7"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView7"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/recyclerView7"
        app:layout_constraintTop_toTopOf="@+id/recyclerView7"
        app:layout_constraintVertical_bias="0.136" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/package_name"
        android:textColor="@color/colorRebeccaPurple"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView7"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView7"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="@+id/recyclerView7"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.382" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView8"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"

        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView7"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/price"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView8"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView8"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="@+id/recyclerView8"
        app:layout_constraintTop_toTopOf="@+id/recyclerView8"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/price"
        android:textColor="@color/colorRebeccaPurple"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView8"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView8"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="@+id/recyclerView8"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        app:layout_constraintVertical_bias="0.258" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView9"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView8"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/total_lessons"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView9"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView9"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="@+id/recyclerView9"
        app:layout_constraintTop_toTopOf="@+id/recyclerView9"
        app:layout_constraintVertical_bias="0.187" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView9"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView9"
        app:layout_constraintStart_toStartOf="@+id/recyclerView9"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView13"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView9"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/total_days"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView13"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView13"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="@+id/recyclerView13"
        app:layout_constraintTop_toTopOf="@+id/recyclerView13"
        app:layout_constraintVertical_bias="0.208" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView13"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView13"
        app:layout_constraintStart_toStartOf="@+id/recyclerView13"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />


</androidx.constraintlayout.widget.ConstraintLayout>