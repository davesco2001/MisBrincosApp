<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBluePurple"
    tools:context=".LogInActivity">

    <TextView
        android:id="@+id/log_in_message"
        android:layout_width="289dp"
        android:layout_height="59dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="@string/welcome_back"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_log_in"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorBluePurple"
        android:backgroundTint="@color/colorBluePurple"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:collapseIcon="@drawable/icon_vector_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/icon_vector_1" />

    <ImageView
        android:id="@+id/ilustr_log_in"
        android:layout_width="295dp"
        android:layout_height="235dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/ilustration_log_in"
        android:src="@drawable/ic_undraw_workout_gcgu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_in_message" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionGroup="false"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ilustr_log_in"
        app:layout_constraintVertical_bias="0.51">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:minWidth="275dp"
            android:minHeight="265dp"
            android:transitionGroup="false">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="202dp"
                android:text="@string/log_in"
                android:textColor="@color/colorBluePrussian"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.535"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.055" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorBluePrussian"
                android:drawableStart="@drawable/ic_lock_black_18dp"
                android:drawableTint="@color/colorBluePrussian"
                android:ems="7"
                android:fontFamily="@font/nunito"
                android:hint="@string/password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:lineSpacingExtra="8sp"
                android:minHeight="48dp"
                android:textColor="@color/colorRebeccaPurple"
                android:textColorHint="@color/colorBluePrussian"
                android:typeface="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.623"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                app:layout_constraintVertical_bias="0.142"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="28dp"
                android:backgroundTint="@color/colorBluePrussian"
                android:drawableStart="@drawable/ic_mail_black_18dp"
                android:drawableTint="@color/colorBluePrussian"
                android:ems="7"
                android:fontFamily="@font/nunito"
                android:hint="@string/email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:lineSpacingExtra="8sp"
                android:minHeight="48dp"
                android:textColor="@color/colorRebeccaPurple"
                android:textColorHint="@color/colorBluePrussian"
                android:typeface="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/buttonLogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="93dp"
                android:layout_marginTop="250dp"
                android:layout_marginEnd="94dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/colorRebeccaPurple"
                android:drawableTint="@color/colorRebeccaPurple"
                android:elevation="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/log_in"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:translationZ="10dp"
                app:cornerRadius="100sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.7"
                tools:ignore="DuplicateSpeakableTextCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>