<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".EditSessionsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_edit_sessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:collapseIcon="@drawable/icon_vector_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/ic_edit_black_24dp"
        app:navigationIcon="@drawable/icon_vector_2"
        app:title="@string/edit_session"
        app:titleTextColor="@color/colorRebeccaPurple" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/edit_session"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_edit_sessions"
        app:layout_constraintVertical_bias="0.018" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorRebeccaPurple"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/edit"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.906" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView10"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/select_session_id"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView10"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView10"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="@+id/recyclerView10"
        app:layout_constraintTop_toTopOf="@+id/recyclerView10"
        app:layout_constraintVertical_bias="0.183" />

    <Spinner
        android:id="@+id/spinner7"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView10"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView10"
        app:layout_constraintStart_toStartOf="@+id/recyclerView10"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView11"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView10"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/day"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView11"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView11"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="@+id/recyclerView11"
        app:layout_constraintTop_toTopOf="@+id/recyclerView11"
        app:layout_constraintVertical_bias="0.196" />

    <Spinner
        android:id="@+id/spinner8"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView11"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView11"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/recyclerView11"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        app:layout_constraintVertical_bias="0.413" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView14"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView11"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/hour"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView14"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView14"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="@+id/recyclerView14"
        app:layout_constraintTop_toTopOf="@+id/recyclerView14"
        app:layout_constraintVertical_bias="0.181" />

    <Spinner
        android:id="@+id/spinner9"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView14"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView14"
        app:layout_constraintStart_toStartOf="@+id/recyclerView14"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView16"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView14"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/date"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView16"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView16"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="@+id/recyclerView16"
        app:layout_constraintTop_toTopOf="@+id/recyclerView16"
        app:layout_constraintVertical_bias="0.166" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:ems="10"
        android:fontFamily="@font/nunito_bold"
        android:inputType="textPersonName"
        android:textColor="@color/colorRebeccaPurple"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView16"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView16"
        app:layout_constraintStart_toStartOf="@+id/recyclerView16"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView18"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView16"
        app:layout_constraintVertical_bias="0.101" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/classroom_number"
        android:textColor="@color/colorRebeccaPurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView18"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView18"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="@+id/recyclerView18"
        app:layout_constraintTop_toTopOf="@+id/recyclerView18"
        app:layout_constraintVertical_bias="0.166" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:ems="10"
        android:fontFamily="@font/nunito_bold"
        android:inputType="textPersonName"
        android:textColor="@color/colorRebeccaPurple"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView18"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView18"
        app:layout_constraintStart_toStartOf="@+id/recyclerView18"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />


</androidx.constraintlayout.widget.ConstraintLayout>